    <script>
        function mostrarDetalhes(cidade) {
            var detalhes = document.querySelectorAll('.detalhes');
            detalhes.forEach(function(detalhe) {
                detalhe.style.display = 'none';
            });
            var detalheCidade = document.getElementById('detalhes-' + cidade);
            if (detalheCidade) {
                detalheCidade.style.display = 'block';
            }
        }
    </script>
